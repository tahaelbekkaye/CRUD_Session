<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
@model IEnumerable<CRUD_Session.ViewModels.ToDo>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

@if (ViewBag.Theme != null)
{
    <link rel="stylesheet" href="~/css/@(ViewBag.Theme?.ToLower().Trim()).css" />
}
else
{
    <link rel="stylesheet" href="~/css/default.css" /> <!-- Utilisez un thème par défaut si aucun thème n'est défini -->
}

    @{
        ViewData["Title"] = "Index";
    }
    <h1>Index</h1>
<a asp-controller="Theme" asp-action="Switch" asp-route-theme="Dark">Switch to Dark Theme</a>
<a asp-controller="Theme" asp-action="Switch" asp-route-theme="Light">Switch to Light Theme</a>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Libelle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.State)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateLimite)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastLogout)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Libelle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateLimite)
                    </td>
                    <td>
                        <p>@ViewBag.User</p>
                    </td>
                    <td>
                        <a asp-action="Modifier" asp-route-id="@item.Id"><i class="fas fa-edit" title="Modifier"></i></a>
                        <form asp-action="Supprimer" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?')">
                            <button type="submit" style="background: none; border: none; padding: 0; margin: 0; cursor: pointer;">
                                <i class="fas fa-trash-alt" title="Supprimer"></i>
                            </button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
